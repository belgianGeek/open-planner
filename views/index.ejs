<!DOCTYPE html>
<html lang="fr-BE" dir="ltr">

<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="src/scss/prefixed/index.css">
  <link rel="icon" type="image/png" href="src/scss/icons/favicon.png">
  <title>Node Planner</title>
</head>

<body>
  <div class="backgroundColor"></div>
  <header class="header">
    <span class="header__container flex">
      <img class="header__container__icon returnIcon hidden" alt="Retour en arrière" src="src/scss/icons/return.svg">
      <span class="header__container__msg hidden">Étape précédente</span>
    </span>
    <%- include('sidebar'); %>
    </span>
  </header>
  <main class="wrapper flex">
    <section class="home flex">
      <h1 class="home__mainTitle">Bienvenue dans Node Planner</h1>
      <h2 class="home__title title">Que veux-tu faire ?</h2>
      <span class="home__btnContainer flex">
        <button class="home__btnContainer__newRequest btn home-btn" type="button">Rentrer une nouvelle demande</button>
        <button class="home__btnContainer__search btn home-btn" type="button" name="button">
          <a href="/search">Afficher les demandes en cours</a>
        </button>
      </span>
    </section>
    <%- include('in_requests01', {locations: locations.split(',')}); %>
    <section class="addReader__step1 hidden">
      <h2 class="addReader__step1__title title">Ajouter un lecteur</h2>
      <form class="addReader__step1__form flex" action="/" method="post">
        <h3 class="addReader__step1__form__title title">Nom et prénom</h3>
        <span class="addReader__step1__form__nameContainer flex">
          <input class="addReader__step1__form__nameContainer__readerName input" type="text" placeholder="Nom" required>
          <input class="addReader__step1__form__nameContainer__readerFirstName input" type="text" placeholder="Prénom" required>
        </span>
        <h3 class="addReader__step1__form__title title">Adresse email</h3>
        <input class="addReader__step1__form__email__input input" type="email" placeholder="Adresse email" required>
        <h3 class="addReader__step1__form__title title">Sexe</h3>
        <span class="addReader__step1__form__male flex">
          <label class"addReader__step1__form__male__label">
            <input class="addReader__step1__form__male__input input radio" name="gender" type="radio" value="masculin">
            Masculin
          </label>
        </span>
        <span class="addReader__step1__form__female flex">
          <label class"addReader__step1__form__female__label">
            <input class="addReader__step1__form__female__input input radio" name="gender" type="radio" value="féminin">
            Féminin
          </label>
        </span>
        <span class="addReader__step1__form__btnContainer flex">
          <button class="addReader__step1__form__btnContainer__reset btn btn--reset" type="reset">Effacer les champs</button>
          <button class="addReader__step1__form__btnContainer__submit btn btn--submit" type="submit">Valider</button>
        </span>
      </form>
    </section>
  </main>
  <%- include('notification'); %>
  <span class="export hidden">
    <span class="export__child flex">
      <h2 class="export__child__title title">Exporter la base de données</h2>
      <section class="export__child__container flex">
        <form class="export__child__container__format flex">
          <h3 class="title">Format</h3>
          <label class="export__child__container__format__csv">
            <input class="export__child__container__format__csv__input input radio" name="DBformat" type="radio" value="csv">
            CSV (compatible Excel)
          </label>
          <label class="export__child__container__format__pgsql">
            <input class="export__child__container__format__pgsql__input input radio" name="DBformat" type="radio" value="pgsql">
            PostgreSQL (format base de données)
          </label>
        </form>
        <span class="export__child__container__btnContainer flex">
          <button class="export__child__container__btnContainer__btn btn btn--submit" type="button">Exporter</button>
          <button class="export__child__container__btnContainer__btn btn btn--reset" type="button">Annuler</button>
        </span>
      </section>
    </span>
  </span>
  <%- include('about'); %>
  <%- include('drafts'); %>
  <%- include('confirmation'); %>
  <%- include('leave'); %>
  <%- include('settings'); %>
  <%- include('scripts'); %>
</body>

</html>
