<section class="inRequests inRequests__step1 hidden">
  <span class="inRequests__id hidden"></span>
  <form class="inRequests__form flex" action="/" method="post">
    <h2 class="title">Informations du demandeur</h2>
    <span class="inRequests__form__applicantInfo flex">
      <label class="flex">
        Implantation du demandeur
        <select class="inRequests__form__applicantInfo__location input" required="true">
          <option value="default">Sélectionnez une implantation</option>
          <% for(const [i, location] of locations.entries()) { %>
          <option value="<%= location.location_id %>"><%= location.location_name %></option>
          <% } %>
        </select>
      </label>
      <label class="flex">
        Nom du demandeur
        <input class="inRequests__form__applicantInfo__name input" type="text" placeholder="Nom du demandeur..." required="true">
      </label>
      <label class="flex">
        Prénom du demandeur
        <input class="inRequests__form__applicantInfo__firstname input" type="text" placeholder="Prénom du demandeur..." required="true">
      </label>
    </span>
    <span class="inRequests__form__requestInfo flex">
      <span class="inRequests__form__requestInfo__row1 flex">
        <% if (isSearchPage) { %>
          <label class="flex">
            Statut de la demande
            <select class="inRequests__form__requestInfo__row1__status input" type="text" placeholder="Statut..." required="true">
              <option value="waiting">Non attribué</option>
              <option value="wip">En cours</option>
              <option value="done">Terminé</option>
            </select>
          </label>
          <label class="flex">
            Utilisateur chargé de la tâche
            <select class="inRequests__form__requestInfo__row1__assignedWorker input" required="true">
              <option value="default">Sélectionner l'utilisateur chargé de la tâche</option>
              <% for(const user of users) { %>
                <option value="<%= user.user_id %>"><%= user.name.toUpperCase() %>, <%= user.firstname %></option>
                <% } %>
              </select>
            </label>
        <% }%>
        <label class="flex">
          Date de la demande
          <input class="inRequests__form__requestInfo__row1__requestDate input" type="date" required="true">
        </label>
      </span>
      <h2 class="title">Objet de la demande</h2>
      <textarea class="inRequests__form__requestInfo__comment flex" rows="8" cols="80" placeholder="Entrez ici le sujet de votre demande..."></textarea>
    </span>
    <span class="inRequests__form__btnContainer flex">
      <button class="inRequests__form__btnContainer__reset btn btn--reset" type="reset">Effacer les champs</button>
      <button class="inRequests__form__btnContainer__submit inRequests__step1__btn btn btn--submit" type="submit">Valider</button>
      <button class="inRequests__form__btnContainer__hide inRequests__step1__btn btn home-btn hidden" type="button">Retour aux résultats de recherche</button>
    </span>
  </form>
</section>
