<!DOCTYPE html>
<html lang="fr" dir="ltr">

<%- include('head'); %>

<body>
  <main class="wrapper loginWrapper flex">
    <h1 class="title home__mainTitle"><%= programName %></h1>
    <% if (!firstUser) { %>
      <form class="login flex" action="/login" method="post">
        <h1 class="title home__mainTitle">S'identifier</h1>
        <label  class="flex">
          Adresse email
          <input class="input" type="email" name="email" placeholder="Adresse email">
        </label>
        <label  class="flex">
          Mot de passe
          <input class="input" type="password" name="password" placeholder="InsÃ©rez le mot magique">
        </label>
        <button class="btn home-btn" type="submit">Se connecter</button>
        <% if (messages.error) { %>
          <p class="warning"><%= messages.error %></p>
        <% } %>
      </form>
    <% } else { %>
      <%- include('register',  {registerClass: 'flex', locations: locations}); %>
    <% } %>
  </main>
  <%- include('scripts'); %>
</body>

</html>
